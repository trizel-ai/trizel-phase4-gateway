{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trizel.ai/schema/theory_package.schema.json",
  "title": "TCRL Theory Package",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "theory_id",
    "label",
    "scope_statement",
    "ontology",
    "axioms",
    "measurement_model",
    "reduction_notes",
    "reduced_claim_ids",
    "provenance"
  ],
  "properties": {
    "theory_id": { "type": "string", "minLength": 1 },
    "label": { "type": "string", "minLength": 1 },
    "scope_statement": { "type": "string", "minLength": 1 },

    "ontology": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "axioms": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },

    "measurement_model": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observables_supported", "observables_not_supported"],
      "properties": {
        "observables_supported": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "observables_not_supported": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "reduction_notes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["loss_statement", "non_extractable_components"],
      "properties": {
        "loss_statement": { "type": "string", "minLength": 1 },
        "non_extractable_components": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "reduced_claim_ids": {
      "type": "array",
      "minItems": 0,
      "items": { "type": "string", "minLength": 1 }
    },

    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source_material_paths", "tcrl_author", "version"],
      "properties": {
        "source_material_paths": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "tcrl_author": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 }
      }
    }
  }
}
