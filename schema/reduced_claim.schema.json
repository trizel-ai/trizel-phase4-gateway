{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trizel.ai/schema/reduced_claim.schema.json",
  "title": "Reduced Claim (TCRL Output)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "claim_id",
    "theory_id",
    "object_scope",
    "claim_text",
    "assumptions",
    "observable_surface",
    "testability_class",
    "evaluation_rule",
    "provenance"
  ],
  "properties": {
    "claim_id": { "type": "string", "minLength": 1 },
    "theory_id": { "type": "string", "minLength": 1 },
    "object_scope": { "type": "string", "minLength": 1 },

    "claim_text": { "type": "string", "minLength": 1 },

    "assumptions": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },

    "observable_surface": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observables", "constraints"],
      "properties": {
        "observables": {
          "type": "array",
          "minItems": 0,
          "items": { "type": "string", "minLength": 1 }
        },
        "constraints": {
          "type": "array",
          "minItems": 0,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "testability_class": {
      "type": "string",
      "enum": ["measurable_prediction", "constrainable", "non_testable_presently"]
    },

    "evaluation_rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pass_condition", "fail_condition", "inconclusive_condition"],
      "properties": {
        "pass_condition": { "type": "string", "minLength": 1 },
        "fail_condition": { "type": "string", "minLength": 1 },
        "inconclusive_condition": { "type": "string", "minLength": 1 }
      }
    },

    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["theory_package_path", "source_excerpt_paths", "reduction_loss_statement"],
      "properties": {
        "theory_package_path": { "type": "string", "minLength": 1 },
        "source_excerpt_paths": {
          "type": "array",
          "minItems": 0,
          "items": { "type": "string", "minLength": 1 }
        },
        "reduction_loss_statement": { "type": "string", "minLength": 1 }
      }
    }
  }
}
